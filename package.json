{
	"name": "hoaxify",
	"version": "1.0.0",
	"description": "tdd with express",
	"main": "app.js",
	"scripts": {
		"start": "cross-env NODE_ENV=development nodemon app.js",
		"jest": "cross-env NODE_ENV=test jest --watch",
		"lint": "eslint . --fix",
